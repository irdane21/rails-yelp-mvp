<div class="container">
  <h1>List of all the restaurant</h1>
  <br>
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li>
          <%= link_to restaurant.name, restaurant_path(restaurant) %>
        </li>
      <% end %>
    </ul>
    <br>
    <%= link_to "+ Add a new restaurant", new_restaurant_path,
      class: 'btn btn-primary'
    %>
</div>
